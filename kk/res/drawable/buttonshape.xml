<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
    android:radius="14dp"
    />
     <gradient
          android:angle="270"
          android:centerX="35%"
          android:startColor="#ACB324"
          android:centerColor="#989E20"
          android:endColor="#858A1C"
          android:type="linear" />
    
    <padding
    android:left="0dp"
    android:top="0dp"
    android:right="0dp"
    android:bottom="0dp"
    />
    
    <stroke
    android:width="1dp"
    android:color="#717518"
    />
  </shape>
  </item>
  
  <item>
    <shape>
      <corners
      android:radius="14dp"
      />
      <gradient
    android:angle="270"
    android:centerX="35%"
    android:centerColor="#B8BF27"
    android:startColor="#D6DE2D"
    android:endColor="#858A1C"
    android:type="linear"
    />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp"/>
        <stroke
        android:width="1dp"
        android:color="#717518" />   
    </shape>
  </item>
  
</selector>