<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.25"
    android:background="@drawable/background"
    android:baselineAligned="true"
	android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ueberschriften"
            android:gravity="bottom|center_horizontal"
            android:minHeight="35dp"
            android:paddingBottom="5dp"
            android:text="Neue Fahrt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="hier soll spÃ¤ter eine Grafik hin: Startort, alle Haltestellen, Zielort mit Fahne" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:paddingBottom="5dp"
            android:text="Beifahrer anlegen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="15dp"
	        android:ems="10"
	        android:hint="Name"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="15dp"
	        android:ems="10"
         	android:hint="Telefon"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="15dp"
	        android:ems="10"
	        android:hint="Uhrzeit"
            android:inputType="time" />

        //Startort des Beifahrers

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" 
            android:background="#80FFFFFF" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:maxWidth="10dp"
                android:text="Startort:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1" />
           
        </LinearLayout>
                
		//Zielort des Beifahrers
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF" >

			<TextView
			    android:id="@+id/textView4"
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:maxWidth="10dp"
                android:text="Zielort:"
                android:textSize="18sp" />

           <Spinner
            android:id="@+id/spinner2"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1" />
           
        </LinearLayout>
        
</LinearLayout>